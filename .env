POSTGRES_USER=pineapple
POSTGRES_PASSWORD=pineapple
POSTGRES_DB=pineapple
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://pineapple:pineapple@db:5432/pineapple

REDIS_URL=redis://redis:6379/0

REDDIT_USER=WeirdPineapple
API_RATE_DELAY=6.5  # seconds between external requests (6.5 keeps the limit under <=10 calls/min)

# Testing helpers
# If set, scanner will stop after processing this many Friday posts (useful for local tests)
TEST_POST_LIMIT=
# Optionally specify comma-separated post ids to process (e.g. TEST_POST_IDS=1q8bzx8,2ab3cd4)
TEST_POST_IDS=

# How many days back to rescan existing posts for new/edited comments.
# Set to 0 to skip rescanning and focus on metadata updates.
POST_COMMENT_LOOKBACK_DAYS=180

# Comma-separated list of subreddit names to ignore (normalized to lowercase).
# Defaults to the two problematic test subs so they won't be recorded: wowthissubexists,sneakpeekbot
# Example to override: IGNORE_SUBREDDITS=spamsub,anotherone
IGNORE_SUBREDDITS=wowthissubexists,sneakpeekbot,NSFW411

# Comma-separated list of subreddit names to actively scan. When set,
# the scanner will fetch posts from these subreddits. Values are case-insensitive.
# Example: SUBREDDITS_TO_SCAN=wowthissubexists,NSFW411
SUBREDDITS_TO_SCAN=wowthissubexists,NSFW411


# Runtime/config values
SUBABOUT_MAX_RETRIES=3
HTTP_REQUEST_TIMEOUT=15
